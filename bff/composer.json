{
    "name": "lakewatch/bff",
    "description": "Backend for Frontend service for LakeWatch",
    "type": "project",
    "require": {
        "php": "^8.3",
        "firebase/php-jwt": "^6.10",
        "guzzlehttp/guzzle": "^7.0",
        "php-di/php-di": "^7.0",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.13",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
