{
  "name": "lakewatch/bff",
  "description": "Slim PHP API server with JWT auth and PostgreSQL",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "slim/slim": "^4.13",
    "slim/psr7": "^1.6",
    "vlucas/phpdotenv": "^5.6",
    "firebase/php-jwt": "^6.10"
  },
  "autoload": {
    "psr-4": {
      "Bff\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S 0.0.0.0:8080 -t public",
    "post-autoload-dump": [
      "@php -r \"file_exists('public/.htaccess') || copy('public/.htaccess.example', 'public/.htaccess');\""
    ]
  }
}